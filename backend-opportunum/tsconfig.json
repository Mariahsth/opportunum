{
  "compilerOptions": {
    // Saída dos arquivos JS compilados
    "outDir": "./dist",
    "rootDir": "./src",

    // Configurações de módulo e target para Node.js
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",

    // Tipagens do Node.js
    "types": ["node"],

    // Geração de mapas de source + .d.ts
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Regras de verificação
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Compatibilidade
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
